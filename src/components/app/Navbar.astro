---
import SearchBox from "@app/SearchBox.astro";
import { CircleDotDashed, Menu, X } from "lucide-astro";
---

<div class="navbar z-10 bg-base-200">
  <div class="navbar-start">
    <div class="flex-none">
      <label class="btn btn-square btn-ghost swap swap-rotate">
        <input type="checkbox" id="toggleMenu" />
        <!-- hamburger icon -->
        <Menu class="swap-off fill-current" id="showMenu" />

        <!-- close icon -->
        <X class="swap-on fill-current" id="closeMenu" />
      </label>
    </div>
    <div class="inline-flex flex-1 lg:navbar-start">
      <a class="btn btn-ghost text-xl" href="/home">
        <img
          class="mx-auto"
          src="/images/logo/logo-dark.svg"
          alt="Babidi logo"
          width="190px"
          id="logo"
        />
      </a>
    </div>
  </div>
  <div class="navbar-center hidden lg:flex">
    <SearchBox />
  </div>
  <div class="navbar-end">
    <button class="btn btn-square btn-ghost">
      <CircleDotDashed inline-block h-5 w-5 stroke-current />
    </button>
  </div>
</div>
