---
interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---
<div class="lg:w-1/3 m-10">
    <div class="w-full h-full card lg:card-side bg-gradient-to-br from-neutral to-base-100 shadow-xl border-2 border-neutral backdrop-blur-lg brightness-95 rounded-2xl">
        <div class="w-full justify-center absolute overflow-visible -top-5">
            <slot name="icon"></slot>
        </div>
        <div class="card-body mt-5">
            <h2 class="card-title justify-center font-sora font-bold text-primary">{title}</h2>
            <p class="font-sora text-center" style="text-wrap:balance;">
                {description}
            </p>
        </div>
    </div>
</div>

<style>
    .card{
        --left:0px;
        --top:0px;
    }

    .card::before{
        content: "";
        background: theme("colors.primary");

        position: absolute;
        left: var(--left);
        top: var(--top);
        transform: translate(-50%, -50%) scale(1.5);
        filter: blur(50px);

        opacity: 0;
        transition: opacity 0.3s;
    }
</style>