---
import MainLayout from "@layouts/MainLayout.astro";
---

<MainLayout>
<div class="flex flex-col">
  <section  class="header-gradient hero min-h-screen section-bg overflow-x-hidden">
      <div class="flex flex-col items-center text-center z-10">
          <h1 class="text-white text-4xl  lg:text-6xl font-bold font-syne lg:leading-[3.7rem] mb-5 lg:max-w-4xl drop-shadow-lg" style="text-wrap: balance;">Tu Asistente Multifunci√≥n de Lenguaje Generativo</h1>
          <p class="lg:max-w-2xl mx-auto mb-6 lg:mb-8 font-sora text-white opacity-75 drop-shadow-xl text-2xl">
              Potencia tu productividad con Babidi, el Mago del texto Generativo.
          </p>
          <a href="login" class="btn md:btn-md lg:btn-lg btn-black shadow-primary shadow-sm hero-btn rounded-xl animation-gravity hover:text-white hover:border-primary hover:border-2 transition duration-300 ease-in-out">Chatear</a>
      </div>
  </section>
</div>
</MainLayout>


<style>
@keyframes gradient {
    0% {
        background-position: 0% 50%;
        filter: brightness(1); 
    }
    50% {
        background-position: 100% 50%;
        filter: brightness(1.5);
    }
    100% {
        background-position: 0% 50%;
        filter: brightness(1); 
    }
}


.header-gradient:before {
    position: absolute;
    z-index: 10;
    content: "";
    top: 0%;
    bottom: 10%;
    width: 150%;
    left: -25%;
    background: linear-gradient(180deg, theme("colors.secondary") 0%, theme("colors.primary") 100%);
    -webkit-mask-image: radial-gradient(rgba(0,0,0,.85), transparent 70%);
    mask-image: radial-gradient(rgba(0,0,0,.54), transparent 70%);
    animation: gradient 4s ease infinite;
}
</style>